{% extends 'base.html.twig' %}

{% block title %}Manage Users{% endblock %}

{% block content %}
    <h2>Manage Users</h2>
    <button class="add-btn" onclick="showModal('addUserModal')">Add New User</button>
    <table class="table">
        <thead>
        <tr>
            <th>Username</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.role }}</td>
                <td><button class="status-btn active-status" onclick="toggleStatus({{ user.id }})">{{ user.status }}</button></td>
                <td>
                    <button class="action-btn edit" onclick="showEditUserModal({{ user.id }}, '{{ user.username }}', '{{ user.role }}', '{{ user.status }}')">Edit</button>
                    <a href="{{ path('delete_user', {id: user.id}) }}" class="action-btn delete">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
